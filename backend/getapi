using System.Data.SqlClient;
using System.Net.Http;
using System.Web.Http;
using System.Data;
using System.Net;
using System;
using UiAnd.Net.models;

namespace UiAnd.Net.Controllers

{
    public class customerController : ApiController
    {
        [HttpGet, Route("api/Student/details")]
        public HttpResponseMessage get( )
        {

            string query = @"select name,id,content from customer ";
            DataTable t = new DataTable();
            using (var con = new SqlConnection(@"server=IM-RT-LP-706\SQLEXPRESS;database=mydatabase;integrated security=True;"))
            using (var cmd = new SqlCommand(query, con))
            using (var da = new SqlDataAdapter(cmd))
            {
                cmd.CommandType = CommandType.Text;
                da.Fill(t);
            }
            return Request.CreateResponse(HttpStatusCode.OK, t);

        }
        public HttpResponseMessage getbyid(customer cust)
        {

            string query = @"select name,id,content from customer where id=" + cust.id + ""; 
            DataTable t = new DataTable();
            using (var con = new SqlConnection(@"server=IM-RT-LP-706\SQLEXPRESS;database=mydatabase;integrated security=True;"))
            using (var cmd = new SqlCommand(query, con))
            using (var da = new SqlDataAdapter(cmd))
            {
                cmd.CommandType = CommandType.Text;
                da.Fill(t);
            }
            return Request.CreateResponse(HttpStatusCode.OK, t);

        }
        [HttpGet, Route("api/Student/post/{name}/{content}")]

        public string post(customer cust)
        {
            try
            {

                string query = @"insert into customer values('" + cust.name + @"','" + cust.content + @"')";
                DataTable t = new DataTable();
                using (var con = new SqlConnection(@"server=IM-RT-LP-706\SQLEXPRESS;database=mydatabase;integrated security=True;"))
                using (var cmd = new SqlCommand(query, con))
                using (var da = new SqlDataAdapter(cmd))
                {
                    cmd.CommandType = CommandType.Text;
                    da.Fill(t);
                }

                return "inserted sucessfully";
            }
            catch (Exception)
            {
                return "failed to insert";
            }

        }

        public string put(customer cust)
        {
            try
            {
                string query = @"update customer set content='" + cust.content + @"' where id=" + cust.id + "";
                DataTable t = new DataTable();
                using (var con = new SqlConnection(@"server=IM-RT-LP-706\SQLEXPRESS;database=mydatabase;integrated security=True;"))
                using (var cmd = new SqlCommand(query, con))
                using (var da = new SqlDataAdapter(cmd))
                {
                    cmd.CommandType = CommandType.Text;
                    da.Fill(t);
                }
                return "inserted sucessfully";
            }
            catch (Exception)
            {
                return "failed to insert";
            }

        }
        public string delete(customer cust)
        {
            try
            {
                string query = @"update customer set content='" + cust.content + @"' where id=" + cust.id + "";
                DataTable t = new DataTable();
                using (var con = new SqlConnection(@"server=IM-RT-LP-706\SQLEXPRESS;database=mydatabase;integrated security=True;"))
                using (var cmd = new SqlCommand(query, con))
                using (var da = new SqlDataAdapter(cmd))
                {
                    cmd.CommandType = CommandType.Text;
                    da.Fill(t);
                }
                return "inserted sucessfully";
            }
            catch (Exception)
            {
                return "failed to insert";
            }

        }

    }
}



